<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%=  "fixed-top" if controller_name == "pages" && action_name == "home"%>">
  <%= link_to "/", class: "navbar-brand " do %>
  <%= image_tag "https://media.istockphoto.com/illustrations/a-tiny-house-with-wooden-panels-illustration-id1215264823?k=6&m=1215264823&s=612x612&w=0&h=ilFfOtZkdoGu07JAVcyo_TATbOEH6SZQ2iYQvUsYPnY=", class: "rounded-circle" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <%= image_tag "https://semantic-ui.com/images/avatar/large/elliot.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Dashboard", "/dashboard", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>